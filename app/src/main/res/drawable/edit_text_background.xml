<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- لون الخلفية -->
    <solid android:color="#FFFFFF" />

    <!-- الحواف الدائرية -->
    <corners android:radius="16dp" />

    <!-- حدود خفيفة -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- ظل بسيط (يظهر أكثر على خلفيات داكنة أو يمكن محاكاته بكاردفيو إذا أردت تأثير elevation) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
