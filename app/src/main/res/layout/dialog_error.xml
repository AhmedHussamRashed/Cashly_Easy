<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_dialog">


     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
         android:text="Cashly"
        android:textSize="25sp"
        android:textColor="#0A2540"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imageViewErrorIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_warning_red"
        app:tint="#E53E3E" /> <!-- Or use the original red color -->

    <TextView
        android:id="@+id/textViewErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Something went wrong"
        android:textColor="#0A2540"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Please try again later"
        android:textColor="#525F7F"
        android:textSize="16sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0A2540"
        android:text="Retry"
        android:textColor="#FFFFFF"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"/>

</LinearLayout>
