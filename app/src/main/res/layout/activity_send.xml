<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- زر الرجوع -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:contentDescription="Back"
            android:padding="4dp"/>

        <!-- عنوان -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Money"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#001C48"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- مربع إدخال البيانات -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_box"
            android:padding="16dp">

            <!-- حقل إلى -->
            <EditText
                android:id="@+id/recipientEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="To"
                android:drawableEnd="@drawable/ic_person_outline"
                android:background="@drawable/rounded_input"
                android:padding="12dp"
                android:textDirection="rtl"
                android:inputType="textPersonName" />

            <!-- حقل المبلغ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:hint="The Amount"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:textDirection="rtl" />

                <Spinner
                    android:id="@+id/currencySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:entries="@array/currency_array"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- حقل المصدر -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:text="Cashly Balance"
                android:enabled="false"
                android:background="@drawable/rounded_input"
                android:padding="12dp"
                android:textColor="#001C48"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- زر مراجعة التحويل -->
        <Button
            android:id="@+id/reviewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversion Review"
            android:textColor="#FFFFFF"
            android:backgroundTint="#001C48"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
