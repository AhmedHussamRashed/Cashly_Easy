<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/warningIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/warning_icon"
            android:contentDescription="Warning Icon"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/deleteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/deleteMessage"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Deleting your account will permanently erase your profile, transactions, and linked accounts. This action cannot be undone.\n\nAll data associated with your Cashly account will be deleted."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password for Confirmation"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:background=""
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <Button
            android:id="@+id/deleteAccountButton"
            android:layout_width="326dp"
            android:layout_height="50dp"
            android:backgroundTint="#F44336"
            android:text="Proceed to Delete Account"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
