<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- عنوان في المنتصف -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="16dp" />

        <!-- الأسئلة الشائعة -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="● How can I add a deposit? Go to the deposit interface, fill in the fields, and click Confirm."
            android:textSize="16sp"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="● How do I change the language? From Settings, choose the appropriate language from the list."
            android:textSize="16sp"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="● Who can see my data?\nThe data is private to you and will not be shared without your permission."
            android:textSize="16sp"
            android:paddingBottom="24dp"/>

        <!-- إدخال سؤال أو استفسار -->
        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Write your question here..."
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textDirection="rtl"
            android:textSize="16sp" />

        <!-- زر الإرسال -->
        <Button
            android:id="@+id/btnSendQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Send"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            android:textColor="#FFF"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
