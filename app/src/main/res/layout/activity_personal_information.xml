<!-- res/layout/activity_personal_info.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_user_avatar_large"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFD700" />

        <!-- الاسم -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmed Rashed"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <!-- الإيميل -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ahmedrashed@example.com"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <!-- معلومات -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp"
            android:clipToPadding="false"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password: ********"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Language: Arabic"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: Gaza"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingVertical="8dp" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank balance: $10,000"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- أزرار -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:gap="12dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Update"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Delete Account"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Log Out"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
